$icon-font-path = '../../lib/bootstrap-stylus/fonts/'
$brand-primary = #dd8800
$header-width = 60px

$navbar-inverse-bg = #0e5b91;
$navbar-inverse-border = #0e5b91;

$navbar-inverse-link-color = darken(#fff, 10%);
$navbar-inverse-link-hover-color = lighten($brand-primary, 50%);
$navbar-inverse-link-active-color = $navbar-inverse-link-hover-color;
$navbar-inverse-brand-color = $navbar-inverse-link-hover-color;

@require "../../public/lib/bootstrap-stylus/stylus/bootstrap.styl"
@require "../../public/lib/bootstrap/dist/css/bootstrap-theme.css"

.content {
	margin-top: $header-width;
}

.bio {
	white-space: pre-wrap;
}

.main-photo {
		border-radius: 10px;
	padding: 0;
	border: 1px solid $gray-lighter;
	
	& > img {
		border-radius: 10px;
	}
}

.small-padding {
	padding: 5px;
}

.left-padding {
	padding: 0 0 0 10px;
}

.right-padding {
	padding: 0 10px 0 0;
}

.thumbnail-photo {
	display: inline-block;
	position: relative;
	float: left;
	margin: 0 5px 5px 0;
	border-radius: 10px;

	width: 45%;
	
	&:hover {
		opacity: 0.6;
	}
	
	& > img {
		width: 100%;
		border-radius: 10px;
		border: 1px solid $gray-lighter;
	}
	
	/* Black overlay on bottom of picture */
	&:before {
		content: ' ';
		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border-radius: 10px;
		z-index: 1;
		gradient-vertical(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.6), 60%, 100%)
	}
	
	& > div {
		position: absolute;
		bottom: 0;
		left: 0;
		margin-left: 10px;
		margin-bottom: 5px;
		font-weight: bold;
		z-index: 2;
		color: #eee;
	}
}

.like-buttons .btn {
	font-size: 30px;
	padding-top: 10px;
	width: 60px;
	height: 60px;
	border-radius: 30px;
}

.shared-item, .profile-pic-thumbnail {
	img {
		width: 50px;
		height: 50px;
		margin-right: 5px;
		border-radius: 25px;
	}
}

.large-text {
	font-size: 16px;
}

.shared-item {
	margin-bottom: 10px;
	font-style: italic;
	color: $gray-light;
}

.gray-text {
	color: $gray-light;
}

.ng-toast {
	cursor: pointer;
}

/*
 * Match page
 */


.match-table tr {
	cursor: pointer;
	
	& > td {
		vertical-align: middle !important;
		padding: 5px;
	}
	
	&:hover {
		background-color: $gray-lighter;
	}
}

.match-profile {
	text-align: center;
	img {
		border-radius: 10px;
	}
}

.message {
	margin-bottom: 10px;
	width: 90%;
	
	&.mine {
		margin-left: 10%;
		
		.bubble {
			background-color: $gray-lighter;
		}
	}
	
	&.theirs {
		.bubble {
			background-color: $brand-primary;
			color: #fff;
		}
	}
	
	.bubble {
		padding: 10px;
		border-radius: 10px;
		cursor: pointer;
	}
	
	.message-date {
		text-align: right;
		margin-top: 5px;
		font-size: smaller;
		color: $gray;
	}
}

.has-new-message {
	color: $brand-primary !important;
}

/* Match modal */
.matches-marker {
	position: absolute;
	right: 0;
	width: 400px;
}

.matches-popover {
	position: fixed;
	display: block;
	top: $header-width - 5px;
	left: auto;

	width: 400px;
	max-width: none;
	
	.popover-content {
		padding: 10px 5px;
		max-height: 350px;
		overflow: auto;
	}
	
	table {
		margin: 0 auto;
	}
}

.messages-marker {
	position: absolute;
	right: 0;
	width: 300px;
}

.messages-popover {
	position: fixed;
	display: block;
	bottom: 0;
	top: auto;
	left: auto;
	
	width: 300px;
	max-width: none;
	
	.popover-content {
		max-height: 400px;
		overflow: auto;
	}
}

.message-preview {
	width: 290px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.match-header {
	font-size: 24px;
	
	& > a {
		text-decoration: none !important;
	}
}

.navbar-brand > img {
	height: 25px;
	display: inline-block;
}
